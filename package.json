{
  "name": "blindly",
  "version": "1.0.0",
  "scripts": {
    "db:generate": "cd db && npx drizzle-kit generate",
    "db:migrate": "cd db && npx drizzle-kit migrate",
    "gqlgen": "cd services && go run github.com/99designs/gqlgen generate",
    "start:backend": "cd services && go run main.go",
    "start:app": "cd expo && bunx expo start",
    "build:backend": "cd services && go build -o backend"
  },
  "dependencies": {
    "turbo": "^2.6.1",
    "@neondatabase/serverless": "^0.9.4",
    "drizzle-orm": "^0.32.1",
    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "drizzle-kit": "^0.23.0"
  }
}
